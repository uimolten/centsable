rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }

    match /users/{userId} {
      // Allow any authenticated user to read the 'role' for admin verification.
      // Allow users to read their own full document.
      allow read: if request.auth != null && (
                    (resource.data.keys().hasAll(['role']) && request.auth.uid != null) ||
                    request.auth.uid == userId
                  );

      // Allow users to update their own document.
      // Allow admins to update any user document.
      allow write: if (request.auth.uid == userId) || isAdmin(request.auth.uid);

      // Nested collections (e.g., daily_quests)
      match /{allChildren=**} {
        allow read, write: if (request.auth.uid == userId) || isAdmin(request.auth.uid);
      }
    }
  }
}

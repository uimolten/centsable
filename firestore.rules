
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions for Security Logic ---
    function isAuthenticated() {
      // Checks if a user is logged in.
      return request.auth != null;
    }

    function isOwner(userId) {
      // Checks if the logged-in user's ID matches the ID of the document they are trying to access.
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Checks if the user has an 'admin' role in their user document.
      // This requires a read call to the user's own document.
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- User Data (/users collection and subcollections) ---
    // This rule applies to a user's document AND all documents in its subcollections (like daily_quests).
    // An admin can read or write any user's data.
    // A regular user can ONLY read or write to THEIR OWN document and subcollections.
    match /users/{userId}/{documents=**} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // --- Public Content (e.g., lessons) ---
    // This allows any logged-in user to read lessons, but only admins can create or change them.
    match /lessons/{lessonId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
    }
  }
}

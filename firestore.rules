
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Grant admins full read/write access to all user documents for management.
    // Allow individual users to read and write to their own document and all its subcollections.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
  }
}
